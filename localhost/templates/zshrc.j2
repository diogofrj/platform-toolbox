export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="agnoster"
plugins=(git zsh-syntax-highlighting docker)

# Configuração do histórico
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history

# Aliases básicos
alias ll='ls -la'
alias l='ls -l'
alias k='kubectl'

source $ZSH/oh-my-zsh.sh

# Autocompletion
autoload -Uz compinit
compinit